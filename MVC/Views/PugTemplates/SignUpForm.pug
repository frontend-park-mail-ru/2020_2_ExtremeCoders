include  BaseComponents/button
include  BaseComponents/button
include BaseComponents/pageTitle
include BaseComponents/Text
include BaseComponents/avatar
include BaseComponents/classNames

+pageTitle('Зарегистрироваться')

form(method='POST', enctype = 'multipart/form-data', class='reg-form')
    p(class='InputTitle') Имя
    input(type='text', name='name', class=classNames.inputClass)
    p(class='InputTitle') Фамилия
    input(type='text', name='surname', class=classNames.inputClass)
    p(class='InputTitle') Email
    input(type='text', name='email', class=classNames.inputClass)
    p(class='InputTitle') Введите Пароль
    input(type='password', name='password1', class=classNames.inputClass)
    p(class='InputTitle') Повторите пароль
    input(type='password', name='password2', class=classNames.inputClass)
    p(class='InputTitle') Аватар
    input(type='file', placeholder='Выберете аватар', name='avatar', class=classNames.inputClass)
    input(type='submit', value='Зарегистироваться', class='submit', class=classNames.inputClass)
    +button('Назад', 'back', classNames.regButton)

