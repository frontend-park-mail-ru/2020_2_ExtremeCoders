div(class="s-content site-page mainPage")
    div(class="row")
        div(class="column large-3 tab-12 mob-12")

            a(id="add-folder-recived") Добавить папку
            form(name="button-of-recived-folder" class="hide")
                div(class="row")
                    input(name="folderName" type="text" class="h-full-width" placeholder="Добавить папку" value="" autocomplete="off" required)
                    button(type="submit" class="btn btn--medium h-full-width") Добавить


            p(id="summary-recived" class="titles-category") Входящие
            a(id="recivedUn") Без папки
            div(id="recived")
                if(locals.recivedFolder)
                    each folder in locals.recivedFolder
                        a(class="block" id=folder.Name) #{folder.Name}


            div(class="horizontal")

            a(id="add-folder-send") Добавить папку
            form(name="button-of-sended-folder" class="hide")
                div(class="row")
                    input(name="folderName" type="text" class="h-full-width" placeholder="Добавить папку" value="" autocomplete="off" required)
                    button(type="submit" class="btn btn--medium h-full-width") Добавить


            p(id="summary-send" class="titles-category") Исходящие
            a(id="sendedUn") Без папки
            div(id="sended")
                if(locals.sendedFolder)
                  each folder in locals.sendedFolder
                      a(class="block" id=folder.Name) #{folder.Name}

        div(class="column large-4 tab-12 mob-12")
            div(class="bricks-wrapper h-group" name="letters")
                if(locals.selectFolder)
                  each letter in locals.selectFolder
                    article(id=letter.Id class="brick entry format-standard")
                        div(id=letter.Id class="entry__text")
                            div(id=letter.Id class="entry__header")
                                h1(id=letter.Id class="entry__title") #{letter.Theme}

                            if(!letter.IsWatched)
                                div(id=letter.Id class="h-full-width not-watched")
                            div(id=letter.Id class="entry__excerpt")
                                p(id=letter.Id) Получатель: #{letter.Receiver}
                            div(id=letter.Id class="entry__excerpt")
                                p(id=letter.Id) Отправитель: #{letter.Sender}
                            div(id=letter.Id class="entry__excerpt")
                                p(id=letter.Id) #{letter.Text}


        div(class="column large-5 tab-12 mob-12")
            if(letter.Id !== undefined)
                form(id="choose-folder")
                    div(class="row")
                        div(class="column large-6 tab-12 mob-12")
                            input(name="inFolderName" type="text" class="h-full-width" placeholder="Название папки" autocomplete="off" required)
                        div(class="column large-6 tab-12 mob-12")
                            div(class="button r" id="button-1")
                                input(type="checkbox" class="checkbox" id="toogle")
                                div(class="knobs")
                                div(class="layer")
                    div(class="row")
                        button(type="submit" class="btn h-full-width") Добавить

                div(class="row")
                        button(id="delete-folder" class="btn h-full-width") Удалить

                h3(id=letter.Id name="title-of-current") #{letter.Theme}
                p(class="lead") #{letter.Receiver}
                p(class="lead") #{letter.Sender}
                p(class="lead") #{letter.Text}
