
div(class="mainPage")

    if(locals.folderList)
        div(class="folders-main")
            ul(class="listView")
                li(class="folder") Входящие
                li(class="folder") Исходящие

    if(locals.letterList)
        div(class="letterlist-main")
            ul(class="listView" name='letterList')
                each letter in locals.letterList
                    - date = new Date(letter.DateTime * 1000)
                    li()
                        div(id=letter.Id class="letter-title state-checked")
                            label(class="label theme-title") #{letter.Theme}
                            label(class="label sender-title") #{letter.Sender}
                            label(class="label datetime-title") #{date.toLocaleTimeString()}
                            label(class="label text-title") #{letter.Text}


    if(locals.letter)
        - date = new Date(locals.letter.DateTime * 1000)
        div(class="letter-main")
            div(class="letter-view")
                div(class="senderTitle-view")
                    div(class="group input-theme-writeLetter")
                        input(class="Input disabled-input" type="text" placeholder=locals.letter.Sender)
                        span(class="bar")
                        label(class="label-input") От

                div(class="themeTitle-view")
                    div(class="group input-theme-writeLetter")
                        input(class="Input disabled-input" type="text" placeholder=locals.letter.Theme)
                        span(class="bar")
                        label(class="label-input") Тема

                label(class="label dateTime-view") #{date.toLocaleTimeString()}  #{date.toLocaleDateString()}
                textarea(class="textarea disabled-input p-letter-text text-view")  #{locals.letter.Text}

